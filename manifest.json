{
    "manifest_version": 2,
    "name": "LinkedIn Event Scrapper",
    "version": "1.0.0",
    "description": "Extension for scrapping members of a event on LinkedIn",
    "permissions": [
        "storage",
        "tabs",
        "https://*.linkedin.com/*",
        "https://www.linkedin.com/search/results/people/?eventAttending=%5B%*",
        "webRequest",
        "https://cdn.jsdelivr.net/*",
        "https://static-exp1.licdn.com/*",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.linkedin.com/*"
            ],
            "js": [
                "scripts/content-script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Get LinkedIn Event Attendees"
    }
}